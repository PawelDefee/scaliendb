NAME=scaliendb
CONTROLLER=controller
SHARDSERVER=shard
DEFAULT_CONTROLLER_CONFIG=/etc/$NAME/$CONTROLLER.conf
DEFAULT_SHARDSERVER_CONFIG=/etc/$NAME/$SHARDSERVER.conf
BIN_DIR=/usr/bin
DAEMON=$BIN_DIR/$NAME
SAFE_DAEMON=$BIN_DIR/safe_$NAME
START_SCALIENDB_CONTROLLER=NO
START_SCALIENDB_SHARDSERVER=NO
DATABASE_CONTROLLER_DIR=/var/lib/$NAME/$CONTROLLER
DATABASE_SHARDSERVER_DIR=/var/lib/$NAME/$SHARDSERVER
SCALIENDB_LOG_DIR=/var/log/$NAME
SCALIENDB_CONTROLLER_LOG=$SCALIENDB_LOG_DIR/$CONTROLLER.log
SCALIENDB_SHARDSERVER_LOG=$SCALIENDB_LOG_DIR/$SHARDSERVER.log
SCALIENDB_USER=daemon
